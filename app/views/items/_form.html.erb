<%= form_for @item do |f| %>
  <%if @item.errors.any? %>
    <div id="error_explanation">
      <h2> <%= pluralize(@item.errors.count, "error") %> prevented this item from being saved: </h2>
      <ul>
      <% @item.errors.full_messages.each do |msg| %>
        <li> <%= msg %> </li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </p>
 
  <p>
    <%= f.label :price %><br> 
    <%= f.text_field :price %>
  </p>
 
  <p>
    <%= f.submit %>
  </p>
<% end %>