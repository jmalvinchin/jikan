<%= simple_form_for(@item) do |f| %>
  <%if @item.errors.any? %>
    <div id="error_explanation">
      <h2> <%= pluralize(@item.errors.count, "error") %> prevented this item from being saved: </h2>
      <ul>
      <% @item.errors.full_messages.each do |msg| %>
        <li> <%= msg %> </li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.input :name, label_html: {class: 'col-sm-3'}, input_html: {class: 'col-xs-10 col-sm-5'} %>
 
  <%= f.input :price, label_html: {class: 'col-sm-3'}, input_html: {class: 'col-xs-10 col-sm-5'}  %>
  
  <div class="clearfix form-actions">
    <div class="col-md-offset-3 col-md-9">
      <%= f.button :submit, class: 'btn btn-info'%>
      <%= link_to 'Cancel', items_path, class: 'btn btn-default' %>
    </div>
  </div>
<% end %>