<h1>New Addon</h1>

<%= simple_form_for [@entry, @addons] do |f| %>
  <%if @addons.errors.any? %>
    <div id="error_explanation">
      <h2> <%= pluralize(@addons.errors.count, "error") %> prevented this item from being saved: </h2>
      <ul>
      <% @addons.errors.full_messages.each do |msg| %>
        <li> <%= msg %> </li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <p>
    <%= f.input :quantity %><br>
  </p>
  <p>
    <%= f.association :item, :collection => @items, :prompt => "select an item" %>
  </p>
  <p>
    <%= f.button :submit %>
  </p>
<% end %>


<%= link_to 'Back', entry_path(@entry) %>