<%= javascript_include_tag "datatables/init" %>
<div class="page-header">
  <h1>
    Your Entries
  </h1>
</div>

<div class="row">
  <div class="col-xs-12">
    <div class="table-header">
        <%= link_to 'New Entry', entries_path, class: 'btn btn-xs btn-success', method: :post%>
    </div>
    <div class="table-responsive">
      <table id="entries-table" class="table table-striped table-bordered table-hover">
        <thead>
          <th>Entry Number</th>
          <th>Start Time</th>
          <th>End Time</th>
          <th>Actions</th>
        </thead>
        <tbody>
          <% @entries.each do |entry| %>
              <tr>
                <td><%= entry.customer_number %></td>
                <td><%= entry.start_time.strftime('%I:%M%p') %></td>
                <td>
                  <% if entry.end_time %>
                    <%= entry.end_time.strftime('%I:%M%p') %>
                  <% else %>
                    N/A
                  <% end %>
                </td>
                <td>
                  <%= link_to 'Show', entry %> <%= link_to 'Void', entries_path(entry), method: :delete, data: { confirm: 'Are you sure?' } %>
                </td>
              </tr>
            <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>